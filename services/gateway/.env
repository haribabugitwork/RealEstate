# services/gateway/.env

# Port the gateway listens on (inside the container)
PORT=3000

# Secret used to validate incoming JWTs
JWT_SECRET=your_jwt_secret

# URLs of your internal micro-services (container DNS names + internal ports)
AUTH_SERVICE_URL=http://auth:3000
PROPERTY_SERVICE_URL=http://property:3000
ALLOCATION_SERVICE_URL=http://allocation:3000
PAYMENTS_SERVICE_URL=http://payments:3000
COMPLAINTS_SERVICE_URL=http://complaints:3000
COMPANY_SERVICE_URL=http://company:3000
